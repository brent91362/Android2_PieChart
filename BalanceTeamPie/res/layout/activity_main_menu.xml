<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" >  
    
    <!-- A label to show Team ID number -->
    <TextView
        android:id="@+id/teamIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="#FFFFFF"
        android:text="Team ID#: [none]" />
    
    <Button
	    android:id="@+id/btnCreate"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_above="@+id/btnJoin"
	    android:background="@drawable/button_red"
	    style="@style/button_text_style"
	    android:text="Create Team" />
    
    <Button
	    android:id="@+id/btnJoin"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_above="@+id/btnTeamPie"
	    android:background="@drawable/button_red"
	    style="@style/button_text_style"
	    android:text="Join Team" />
    
    <Button
	    android:id="@+id/btnTeamPie"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_centerVertical="true"
	    android:background="@drawable/button_blue"
	    style="@style/button_text_style"
	    android:text="View Team Pie" />
    
    <Button
	    android:id="@+id/btnView2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_below="@+id/btnTeamPie"
	    android:background="@drawable/button_blue"
	    style="@style/button_text_style"
	    android:text="View Member Pie" />
    
    <Button
	    android:id="@+id/editPie"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_below="@+id/btnView2"
	    android:background="@drawable/button_blue"
	    style="@style/button_text_style"
	    android:text="Edit My Pie" />
    
</RelativeLayout>
